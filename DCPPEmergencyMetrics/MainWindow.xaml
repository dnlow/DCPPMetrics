<Window x:Class="DCPPEmergencyMetrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCPPEmergencyMetrics"
        mc:Ignorable="d"
        Title="Diablo Canyon Emergency Metrics" Height="1000" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DrillButton"
                Content="Simluated Emergency"
                Click="DrillButton_Click"
                ClickMode="Press"
                Margin="723,294,719,564"
                Width="150"
                MaxHeight="30"
                HorizontalAlignment="Center"
                Foreground="Gray" Grid.ColumnSpan="2" />

        <Button x:Name="LiveButton"
                Content="Live Emergency"
                Click="LiveButton_Click"
                ClickMode="Press"
                Margin="723,385,719,473"
                Width="150"
                MaxHeight="30"
                HorizontalAlignment="Center"
                Foreground="Gray" Grid.ColumnSpan="2" />
    </Grid>
</Window>
